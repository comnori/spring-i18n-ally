{
  "name": "spring-i18n-helper",
  "displayName": "Spring i18n Helper",
  "publisher": "comnori",
  "version": "0.0.1",
  "description": "Boost your Spring Boot productivity: Inline i18n previews and hover details for Java properties.",
  "pricing": "Free",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/comnori/REPO_NAME"
  },
  "homepage": "https://github.com/comnori/REPO_NAME",
  "bugs": {
    "url": "https://github.com/comnori/REPO_NAME/issues",
    "email": "comnori@gmail.com"
  },
  "maintainers": [
    {
      "name": "Yongsik Yun",
      "email": "comnori@gmail.com",
      "web": "https://www.linkedin.com/in/yongsik-yun-36260344"
    }
  ],
  "funding": [
    {
      "type": "Buy Me a Coffee",
      "url": "https://www.buymeacoffee.com/comnori"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/comnori"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out ./build",
    "publish": "vsce publish"
  },
  "engines": { "vscode": "^1.90.0" },
  "activationEvents": [ "onLanguage:java" ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spring i18n Helper",
      "properties": {
        "springI18n.locales": { "type": "array", "default": ["ko", "en"], "description": "Prioritized locales to display in inline decorations." },
        "springI18n.viewLocale": { "type": "string", "default": "", "description": "The specific locale to display in inline decorations." },
        "springI18n.keyRegex": { "type": "string", "default": "\"([a-zA-Z0-9_]+(?:\\.[a-zA-Z0-9_]+)+)\"", "description": "Custom Regex to identify i18n keys." }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/properties-reader": "^2.1.3",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "properties-reader": "^2.3.0"
  }
}
